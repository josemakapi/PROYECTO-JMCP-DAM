<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Informes.Vista.PSobre"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="shellAbout"
    BackgroundImageSource="{DynamicResource imagenFondo}">

    <Grid RowDefinitions="Auto,Auto,*">
        <Grid
            Grid.Row="0"
            BackgroundColor="{DynamicResource HeaderColor}"
            ColumnDefinitions="Auto,*"
            RowDefinitions="*,*">
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,10,10,10"
                HeightRequest="60"
                HorizontalOptions="Start"
                InputTransparent="True"
                Source="about.png"
                ToolTipProperties.Text="En este apartado podrÃ¡ ver las ventas diarias del TPV"
                WidthRequest="60" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,10,10"
                BackgroundColor="Transparent"
                FontFamily="Heavitas"
                FontSize="28"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{DynamicResource headerAboutText}"
                TextColor="{DynamicResource HeaderColorText}"
                VerticalOptions="Center" />
        </Grid>

        <VerticalStackLayout Grid.Row="1">
            <Label
                Margin="25,30,25,0"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{DynamicResource txtAbout}"
                TextColor="{DynamicResource LabelColorText}" />
            <ImageButton
                x:Name="ImagenJMCP"
                Margin="0,0,0,0"
                Clicked="ImagenJMCP_Clicked"
                HorizontalOptions="Center"
                SemanticProperties.Description="Haz click en esta imagen en la que te has situado si quieres enviar un email al autor"
                Source="isologo256jmcp.jpg"
                VerticalOptions="End"
                WidthRequest="200" />

        </VerticalStackLayout>


    </Grid>

</ContentPage>