<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Informes.Vista.ConfigPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="shellConfig"
    BackgroundImageSource="{DynamicResource imagenFondo}">

    <Grid RowDefinitions="Auto,*">
        <Grid
            Grid.Row="0"
            BackgroundColor="{DynamicResource HeaderColor}"
            ColumnDefinitions="Auto,*"
            RowDefinitions="*,*">
            <Image
                Grid.Row="0"
                Grid.Column="0"
                Margin="10,10,10,10"
                HeightRequest="60"
                HorizontalOptions="Start"
                InputTransparent="True"
                Source="informe_icon.png"
                ToolTipProperties.Text="En este apartado podrÃ¡ ver las ventas diarias del TPV"
                WidthRequest="60" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,10,10"
                BackgroundColor="Transparent"
                FontFamily="Heavitas"
                FontSize="28"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                Text="{DynamicResource headerConfigText}"
                TextColor="{DynamicResource HeaderColorText}"
                VerticalOptions="Center" />
        </Grid>
        <ScrollView
            x:Name="scrollBusquedasG"
            Grid.Row="1"
            VerticalOptions="FillAndExpand"
            VerticalScrollBarVisibility="Always">
            <Grid
                Margin="10,10,10,10"
                ColumnDefinitions="Auto,*"
                HorizontalOptions="Center"
                RowDefinitions="Auto,Auto,Auto">

                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    HeightRequest="40"
                    HorizontalTextAlignment="End"
                    Text="{DynamicResource optIdioma}"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Picker
                    x:Name="pkIdiomaCfg"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    HorizontalOptions="Start"
                    SelectedIndex="0"
                    VerticalOptions="Center"
                    WidthRequest="200" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    HeightRequest="40"
                    HorizontalTextAlignment="End"
                    Text="{DynamicResource optVisualTheme}"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Picker
                    x:Name="pkTemaCfg"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    HorizontalOptions="Start"
                    SelectedIndex="0"
                    VerticalOptions="Center"
                    WidthRequest="200" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    HeightRequest="40"
                    HorizontalTextAlignment="End"
                    Text="{DynamicResource optFontSize}"
                    VerticalTextAlignment="Center"
                    WidthRequest="150" />
                <Picker
                    x:Name="pkTamLetra"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    HorizontalOptions="Start"
                    SelectedIndex="0"
                    VerticalOptions="Center"
                    WidthRequest="200" />

            </Grid>
        </ScrollView>
    </Grid>
</ContentPage>