<Window
    x:Class="TPV.Vista.SubVentanaCobro"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TPV.Vista"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="SubVentanaCobroXAML"
    Width="350"
    Height="300"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
    Style="{DynamicResource WindowStyleFondo}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Width="350" Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="60" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Label
            x:Name="lblTitulo"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            VerticalContentAlignment="Center"
            Content="Cobro de Tickets"
            FontSize="24"
            Style="{DynamicResource Titulo}" />
        <Label
            x:Name="lblFPago"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{DynamicResource LabelNormal}" 
            Content="Forma de pago:"
            FontSize="18" />
        <ComboBox
            x:Name="cmbFPago"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="24"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="White"
            ItemsSource="{Binding FormasPago}"
            SelectionChanged="cmbFPago_SelectionChanged"
            TabIndex="0" />
        <Label
            x:Name="lblEntregado"
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Style="{DynamicResource LabelNormal}" 
            Content="Entregado:"
            FontSize="18" />
        <TextBox
            x:Name="txtEntregado"
            Grid.Row="4"
            Grid.Column="0"
            Width="110"
            Height="24"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            LostFocus="txtEntregado_LostFocus"
            PreviewTextInput="ValidarMascaraPrecio_PreviewTextInput"
            Style="{DynamicResource TxtBoxResaltado}"
            TabIndex="1"
            TextChanged="txtEntregado_TextChanged" />
        <Label
            x:Name="lblDevuelto"
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Style="{DynamicResource LabelNormal}" 
            Content="Devuelto:"
            FontSize="18" />
        <TextBox
            x:Name="txtDevuelto"
            Grid.Row="4"
            Grid.Column="1"
            Width="110"
            Height="24"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            PreviewTextInput="ValidarMascaraPrecio_PreviewTextInput"
            Style="{DynamicResource TxtBoxNormal}"
            TabIndex="2" />
        <Button
            x:Name="btnCobrar"
            Grid.Row="5"
            Grid.Column="0"
            Width="80"
            Height="30"
            Margin="0,0,10,5"
            Padding="0,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Click="btnCobrar_Click"
            Content="Cobrar"
            Style="{DynamicResource BotonResaltado}"
            TabIndex="3" />
        <Button
            x:Name="btnCancelar"
            Grid.Row="5"
            Grid.Column="1"
            Width="80"
            Height="30"
            Margin="10,0,0,5"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Click="btnCancelar_Click"
            Content="Cancelar"
            Style="{DynamicResource BotonNormal}"
            TabIndex="4" />

    </Grid>
</Window>
