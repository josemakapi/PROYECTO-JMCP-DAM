            </Button>
            <Button
                x:Name="btnAcciones"
                Grid.Row="4"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="292"
                Height="48"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                Click="btnAcciones_Click"
                Content="Opciones"
                FontSize="13"
                UseLayoutRounding="True">
