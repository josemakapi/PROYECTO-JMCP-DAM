            <Image
                x:Name="imgAvatar"
                Grid.Row="6"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="130"
                Height="130"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                MouseLeftButtonDown="imgAvatar_MouseLeftButtonDown"
                Source="/Recursos/Imagenes/profile.png"
                Stretch="UniformToFill"
                ToolTip="Haz click aquí para bloquear la sesión"
                UseLayoutRounding="True">
