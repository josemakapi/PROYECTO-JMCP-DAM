            <DataGrid
                x:Name="dGridPosVentaMain"
                CellEditEnding="dGridPosVentaMain_CellEditEnding"
                CurrentCellChanged="dGridPosVentaMain_CurrentCellChanged"
                SelectedCellsChanged="dGridPosVentaMain_SelectedCellsChanged"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="300"
                VerticalAlignment="Center"
                AutoGenerateColumns="False"
                Background="#72FFFFFF"
                IsReadOnly="True"
                Style="{DynamicResource DataGridStyle1}"
                UseLayoutRounding="True">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="3*"
                        Binding="{Binding Producto.Nombre}"
                        Header="Producto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextAlignment" Value="Left" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Precio, StringFormat=\{0:F2\}}"
                        Header="Precio (€)">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="TextAlignment" Value="Right" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                </DataGrid.Columns>
            </DataGrid>
            <Label
