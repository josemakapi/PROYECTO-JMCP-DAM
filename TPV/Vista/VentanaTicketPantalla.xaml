<Window
    x:Class="TPV.Vista.VentanaTicketPantalla"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TPV.Vista"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="VentanaTicketPantallaXAML"
    Title="Ticket"
    Width="400"
    Height="600"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Icon="/Recursos/Imagenes/ISOLOGOJMCP16.png"
    Opacity="0.95"
    ResizeMode="NoResize"
    Style="{DynamicResource WindowStyleFondo}"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <!--<Window.Resources>
        <ResourceDictionary Source="../Recursos/Temas/TemaOriginal.xaml" />
    </Window.Resources>-->
    <Grid
        Width="400"
        Height="600"
        HorizontalAlignment="Center"
        Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="330" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>


        <Image
            x:Name="imgLogo"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="100"
            Height="100"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Stretch="UniformToFill" />
        <Label
            x:Name="lblEmpresa"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Content="{Binding TiendaActual.Descripcion}"
            Style="{DynamicResource Titulo}" />

        <Label
            x:Name="lblTarifa"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="30"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="{Binding TarifaActual.Nombre}" Style="{DynamicResource LabelNormal}" />
        <DataGrid
            x:Name="dGridPosVenta"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="20,0,20,0"
            HorizontalAlignment="Center"
            AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="3*"
                    Binding="{Binding Producto.Nombre}"
                    Header="Producto" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Precio}"
                    Header="Precio (€)">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>


        <Button
            x:Name="btnCerrar"
            Grid.Row="4"
            Grid.Column="0"
            Width="81"
            Margin="0,0,15,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="btnCerrar_Click"
            Content="Atrás"
            Style="{StaticResource BotonNormal}" />
        <Button
            x:Name="btnCobrar"
            Grid.Row="4"
            Grid.Column="1"
            Width="87"
            Margin="15,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="btnCobrar_Click"
            Content="Cobrar"
            Style="{StaticResource BotonResaltado}" />

    </Grid>
</Window>
